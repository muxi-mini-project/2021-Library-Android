<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/set_back_all"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/basic_green"
        android:orientation="horizontal">
        <Button
            android:id="@+id/set_back_button"
            android:layout_marginLeft="10dp"
            android:layout_width="50dp"
            android:gravity="center_vertical"
            android:layout_height="50dp"
            android:background="@drawable/ic_baseline_arrow_back_ios_24"/>
        <TextView
            android:id="@+id/set_back_text"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="设置"
            android:textSize="36sp"
            android:layout_marginTop="5dp"
            android:textColor="@color/deep_green"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/zhanghuxinxi_all"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:background="@color/white">
        <TextView
            android:id="@+id/zhanghuxinxi_text"
            android:gravity="center_vertical"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:text="账户信息"
            android:layout_marginLeft="5dp"
            android:textSize="36sp"
            android:textColor="@color/deep_green"/>
        <ImageView
            android:id="@+id/zhanghuxinxi_imageView"
            android:layout_marginLeft="100dp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/lock"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/yonghushouce_all"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:background="@color/white">
        <TextView
            android:id="@+id/yonghushouce_text"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:text="用户手册"
            android:textSize="36sp"
            android:textColor="@color/deep_green"
            android:gravity="center_vertical"/>
        <ImageButton
            android:id="@+id/yonghushouce_button"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="150dp"
            android:background="@drawable/ic_baseline_arrow_forward_ios_24"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/yinsizhengce_all"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:background="@color/white">
        <TextView
            android:id="@+id/yinsizhengce_text"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:text="隐私政策"
            android:textSize="36sp"
            android:textColor="@color/deep_green"
            android:gravity="center_vertical"/>
        <ImageButton
            android:id="@+id/yinsizhengce_button"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="150dp"
            android:background="@drawable/ic_baseline_arrow_forward_ios_24"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tuichudenglu_all"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="250dp"
        android:background="@color/white">
        <TextView
            android:id="@+id/tuichudenglu_text"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="退出登录"
            android:textColor="@android:color/holo_red_light"
            android:gravity="center"
            android:textSize="36dp"/>
    </LinearLayout>


</LinearLayout>