<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:imagecontrol="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:background="@mipmap/p11">

        <com.example.library.RoundImageView
            android:id="@+id/roundImageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:gravity="center_horizontal"
            android:src="@mipmap/p2"
            imagecontrol:layout_constraintBottom_toBottomOf="parent"
            imagecontrol:layout_constraintEnd_toEndOf="parent"
            imagecontrol:layout_constraintHorizontal_bias="0.498"
            imagecontrol:layout_constraintStart_toStartOf="parent"
            imagecontrol:layout_constraintTop_toTopOf="parent"
            imagecontrol:layout_constraintVertical_bias="0.386" />

        <TextView
            android:id="@+id/mine_textView1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:gravity="center_horizontal"
            android:text="昵称"
            android:textColor="@color/black"
            android:textSize="30sp"
            imagecontrol:layout_constraintBottom_toBottomOf="parent"
            imagecontrol:layout_constraintEnd_toEndOf="parent"
            imagecontrol:layout_constraintHorizontal_bias="1.0"
            imagecontrol:layout_constraintStart_toStartOf="parent"
            imagecontrol:layout_constraintTop_toBottomOf="@+id/roundImageView"
            imagecontrol:layout_constraintVertical_bias="0.111" />


        <TextView
            android:id="@+id/mine_textView2"
            android:layout_width="fill_parent"
            android:layout_height="36dp"
            android:layout_marginTop="50dp"
            android:text="个性签名"
            android:gravity="center_horizontal"
            android:textColor="@color/black"
            android:textSize="25sp"
            imagecontrol:layout_constraintEnd_toEndOf="parent"
            imagecontrol:layout_constraintStart_toStartOf="parent"
            imagecontrol:layout_constraintTop_toTopOf="@+id/mine_textView1" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/new_blue">
        <TextView
            android:id="@+id/mine_textView3"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="我的收藏"
            android:gravity="center"
            android:textColor="@color/cardview_light_background"
            android:textSize="20sp"/>
        <View
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:background="@color/white"/>
        <TextView
            android:id="@+id/mine_textView4"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="我的发布"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="20sp"/>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/mine_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>



</LinearLayout>