<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/linearLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout"
        android:layout_width="411dp"
        android:layout_height="96dp"
        android:background="@color/basic_green">

        <TextView
            android:id="@+id/user_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:text="昵称"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@color/deep_green"
            android:textSize="25sp"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="15dp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/default_head_mine"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="20dp" />

        <TextView
            android:id="@+id/motto_text_view"
            android:layout_width="310dp"
            android:layout_height="22dp"
            android:layout_marginStart="15dp"
            android:text="座右铭"
            android:textSize="15dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/deep_green"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.783"
            android:layout_marginLeft="15dp" />

        <TextView
            android:id="@+id/mine_edit_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:text="设置"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/deep_green"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginRight="16dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="555dp"
        android:background="@color/yellow"
        tools:layout_editor_absoluteY="96dp">


        <TextView
            android:id="@+id/mine_book_shelf_text_view"
            android:layout_width="92dp"
            android:layout_height="25dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="18dp"
            android:text="我的书架"
            android:textSize="20dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/basic_green"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="20dp" />

        <ImageView

            android:id="@+id/imageView2"
            android:layout_width="82dp"
            android:layout_height="103dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/default_head_picture_square"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mine_book_shelf_text_view"
            android:layout_marginLeft="20dp" />

        <Button
            android:id="@+id/manage_book_shelf_button"
            android:layout_width="84dp"
            android:layout_height="27dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="21dp"
            android:background="@color/basic_green"
            android:text="     管理"
            android:textColor="@color/deep_green"
            android:textSize="19dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginRight="21dp" />

        <TextView
            android:id="@+id/book_title_text_view"
            android:layout_width="59dp"
            android:layout_height="17dp"
            android:layout_marginStart="45dp"
            android:layout_marginTop="8dp"
            android:text="书名"
            android:textSize="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            android:layout_marginLeft="45dp" />

        <TextView
            android:id="@+id/mine_publication_text_view"
            android:layout_width="93dp"
            android:layout_height="30dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="21dp"
            android:text="我的发布"
            android:textColor="@color/deep_green"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/book_title_text_view"
            android:layout_marginLeft="20dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:background="@color/basic_green">

    </LinearLayout>

</LinearLayout>