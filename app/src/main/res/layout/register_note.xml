<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/register_bg"
    >

    <Button
        android:id="@+id/back"
        android:layout_width="46dp"
        android:layout_height="38dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/ic_baseline_arrow_back_ios_24" />
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="670dp"
       android:orientation="vertical"
       >
        <TextView
            android:id="@+id/new_user"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="注        册"
            android:textSize="35sp"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:textColor="#CB005726"
            />
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">
            <LinearLayout
                android:layout_marginLeft="32dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_width="350dp"
                android:layout_height="350dp"
                android:background="@drawable/register_tv_bg">
                <EditText
                    android:id="@+id/register_username"
                    android:layout_width="280dp"
                    android:layout_height="70dp"
                    android:hint="请设置您的账号"
                    android:layout_marginTop="35dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    />

                <EditText
                    android:id="@+id/register_password"
                    android:layout_width="280dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="20dp"
                    android:hint="请设置您的密码"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:inputType="textPassword"
                    />

                <EditText
                    android:id="@+id/password_again"
                    android:layout_width="280dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="20dp"
                    android:hint="请确认您的密码"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:inputType="textPassword"
                    />
            </LinearLayout>
       </LinearLayout>



       <Button
           android:id="@+id/sureofregister"
           android:layout_width="150dp"
           android:layout_height="50dp"
           android:layout_marginTop="60dp"
           android:layout_gravity="center"
           android:background="#BE437E5D"
           android:text="确     定"
           android:textSize="22sp"
           android:textColor="@color/white"
           android:onClick="sure"
           />
   </LinearLayout>
</LinearLayout>