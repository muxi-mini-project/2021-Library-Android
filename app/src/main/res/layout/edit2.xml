<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/edit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"

        >
        <Button
            android:id="@+id/back_book_extract"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_baseline_arrow_back_ios_24"
            android:onClick="back_extract"
            />
        <Button
            android:id="@+id/finish"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_marginLeft="180dp"
            android:layout_gravity="center"
            android:background="@color/white"
            android:text="完成"
            android:textSize="35sp"
            android:textColor="@color/deep_green"
            android:onClick="finish"
            />

    </LinearLayout>

    <ImageView
        android:layout_marginTop="2.5dp"
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="@color/deep_green"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/add"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:text="添加"
            android:textColor="@color/black"
            android:textSize="36sp"
            />
        <Button
            android:id="@+id/add_look"
            android:layout_gravity="center"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="170dp"
            android:background="@drawable/ic_baseline_control_point_24"
            android:onClick="add"
            />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/book_kind_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="1000dp"
        android:nestedScrollingEnabled="false"
        >


    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>