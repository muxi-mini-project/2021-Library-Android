<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/new_blue"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/book_extract"
            android:layout_marginLeft="30dp"
            android:layout_width="180dp"
            android:layout_height="70dp"
            android:layout_marginTop="12dp"
            android:text="全部书摘"
            android:textSize="38sp"
            android:gravity="center"
            android:textColor="@color/black"
            />
        <Spinner
            android:id="@+id/chose"
            android:layout_width="20dp"
            android:layout_height="70dp"
            android:background="@drawable/ic_baseline_arrow_drop_down_24"
           android:layout_marginTop="4dp"
            android:entries="@array/book_kinds"
            android:spinnerMode="dropdown"
            />

        <Button
            android:id="@+id/edit"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="编辑"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:background="@drawable/edit_look"
            />

        <Button
            android:id="@+id/add"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_baseline_add_circle_outline_24"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/new_blue"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <LinearLayout
            android:orientation="horizontal"
            android:background="@drawable/search"
            android:layout_width="280dp"
            android:layout_height="50dp">
            <ImageView
                android:id="@+id/image_search"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="22dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_baseline_search_24"
                />
            <EditText
                android:id="@+id/book_search"
                android:layout_width="170dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:imeOptions="actionSearch"
                android:hint="搜索书摘"
                android:textSize="18sp"
                android:inputType="text"
                android:background="@color/white"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_gravity="right|center_vertical"
                android:id="@+id/search_delete"
                android:background="@drawable/ic_baseline_highlight_off_24"
                />

        </LinearLayout>

        <ListView
            android:visibility="gone"
            android:id="@+id/search_lv_tips"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="200dp">
        </ListView>

    </LinearLayout>


 <androidx.recyclerview.widget.RecyclerView
     android:id="@+id/book_extract_recyclerview"
     android:layout_width="match_parent"
    android:layout_height="10000dp"
     android:background="@color/new_hint"
    >
 </androidx.recyclerview.widget.RecyclerView>
 </LinearLayout>

</androidx.core.widget.NestedScrollView>

