<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/yellow"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/basic_green"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/book_extract"
            android:layout_marginLeft="30dp"
            android:layout_width="180dp"
            android:layout_height="70dp"
            android:layout_marginTop="12dp"
            android:text="全部书摘"
            android:textSize="38sp"
            android:gravity="center"
            android:textColor="@color/deep_green"
            />
        <Button
            android:id="@+id/chose"
            android:layout_width="20dp"
            android:layout_height="70dp"
            android:background="@drawable/ic_baseline_arrow_drop_down_24"
            android:gravity="center"
            android:layout_marginTop="5dp"
            />

        <Button
            android:id="@+id/edit"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="编辑"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@color/deep_green"
            android:background="#FFFFFF"
            />

        <Button
            android:id="@+id/add"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_baseline_add_circle_outline_24"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/basic_green"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <LinearLayout
            android:orientation="horizontal"
            android:background="@drawable/search"
            android:layout_width="280dp"
            android:layout_height="50dp">
            <ImageView
                android:id="@+id/image_search"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="22dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_baseline_search_24"
                />
            <EditText
                android:id="@+id/book_search"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:hint="搜索书摘"
                android:background="@color/white"
                />
        </LinearLayout>
    </LinearLayout>
<LinearLayout
    android:layout_width="320dp"
    android:layout_height="150dp"
    android:orientation="vertical"
    android:layout_marginLeft="40dp"
    android:layout_marginTop="20dp"
    android:background="@color/white"
    >
    <TextView
        android:id="@+id/book_extract_name"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="书摘名称"
        android:textColor="@color/deep_green"
        android:gravity="center"
        android:textSize="24sp"
        />
    <Button
        android:id="@+id/book_extract_context"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="点击查看详细内容"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textColor="@color/basic_green"
        android:text="2003.3.16"
        android:textSize="20sp"
        />
</LinearLayout>

</LinearLayout>