<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_bottom_guide"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.GuideActivity">

    <FrameLayout
        android:id="@+id/fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="100dp"/>

    <LinearLayout
        android:id="@+id/bottom_button"
        android:layout_width="1080pt"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="#AAC95D">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txt_book_city"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:background="@drawable/book_city_bg"
                android:drawablePadding="20dp"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/book_cities"
                android:textColor="@drawable/book_city_text"
                android:textSize="16sp"
                app:drawableTopCompat="@drawable/book_city_pic" />
            <TextView
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:text="@string/book_cities"
                android:textSize="16sp"
                android:gravity="center_horizontal"
                android:textColor="#005726"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_digest"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:background="@drawable/digest_bg"
                android:drawablePadding="3dp"
                android:gravity="center"
                android:padding="5dp"
                app:drawableTopCompat="@drawable/digest_pic" />
            <TextView
                android:layout_height="20dp"
                android:layout_width="100dp"
                android:text="@string/digests"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:textSize="16sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txt_mine"
                android:layout_height="80dp"
                android:layout_width="100dp"
                android:background="@drawable/mine_bg"
                android:drawablePadding="3dp"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/my"
                android:textColor="@android:color/holo_purple"
                android:textSize="16sp"
                app:drawableTopCompat="@drawable/mine_pic" />
            <TextView
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:gravity="center_horizontal"
                android:text="@string/my"
                android:textSize="16sp"
                android:textColor="@color/black"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="1pt"
        android:background="@color/black"
        android:layout_above="@id/bottom_button"/>

    <FrameLayout
        android:id="@+id/fg_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_button"
        android:layout_below="@id/view2" />



</RelativeLayout>