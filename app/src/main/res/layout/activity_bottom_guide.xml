<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_bottom_guide"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/top_item"
        android:layout_width="1080pt"
        android:layout_height="100dp"
        android:background="@android:color/white">

        <EditText
            android:id="@+id/search_item"
            android:layout_width="781.46pt"
            android:layout_height="110.99pt"
            android:background="@drawable/it_search"
            android:hint="@string/search"
            android:textColorHint="@android:color/black"/>

    </RelativeLayout>

    <RadioGroup
        android:id="@+id/bottom_button"
        android:layout_width="1080pt"
        android:layout_height="130dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="@android:color/holo_green_light">

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:background="@drawable/book_city_bg"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/book_city_pic"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/book_cities"
            android:textColor="@drawable/book_city_text"
            android:textSize="16sp"/>

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:background="@drawable/digest_bg"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/digest_pic"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/digests"
            android:textColor="@drawable/digest_text"
            android:textSize="16sp"/>

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:background="@drawable/mine_bg"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/mine_pic"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/my"
            android:textColor="@drawable/mine_text"
            android:textSize="16sp"/>


    </RadioGroup>

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="1pt"
        android:background="@color/black"
        android:layout_above="@id/bottom_button"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_button"
        android:layout_below="@id/view2"
        android:background="@android:color/holo_red_light"/>



</RelativeLayout>